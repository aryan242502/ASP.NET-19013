@{
    ViewData["Title"] = "🏥 Admin Dashboard";
}

<style>
    body {
        background: #f4f7fb;
        font-family: 'Segoe UI', sans-serif;
    }

    .dashboard-container {
        max-width: 1100px;
        margin: 40px auto;
    }

    h2 {
        text-align: center;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 30px;
    }

    .card {
        border: none;
        border-radius: 15px;
        transition: transform 0.2s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        }

    .card-body h3 {
        font-size: 2rem;
        font-weight: bold;
    }

    .card-body p {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 500;
    }

    .stats-row {
        margin-bottom: 40px;
    }

    .btn-dashboard {
        font-size: 1rem;
        padding: 12px 25px;
        border-radius: 8px;
        transition: 0.3s;
    }

        .btn-dashboard:hover {
            transform: scale(1.05);
        }

    footer {
        text-align: center;
        margin-top: 50px;
        color: #888;
    }
</style>

<div class="dashboard-container">
    <h2>🏥 Hospital Admin Dashboard</h2>

    <div class="row text-center stats-row">
        <div class="col-md-4 mb-4">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <h3>@ViewBag.UserCount</h3>
                    <p>Total Patients</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <h3>@ViewBag.DoctorCount</h3>
                    <p>Total Doctors</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card bg-warning text-dark shadow-sm">
                <div class="card-body">
                    <h3>@ViewBag.AppointmentCount</h3>
                    <p>Total Appointments</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-dashboard btn-outline-primary m-2">
            👥 Manage Patients
        </a>
        <a href="@Url.Action("ManageDoctors", "Admin")" class="btn btn-dashboard btn-outline-success m-2">
            👨‍⚕️ Manage Doctors
        </a>
        <a href="@Url.Action("ManageAppointments", "Admin")" class="btn btn-dashboard btn-outline-warning m-2">
            📅 Manage Appointments
        </a>
    </div>
</div>

<footer>
    <p>© 2025 Doctor Appointment System | Admin Panel</p>
</footer>
