@model IEnumerable<DoctorAppointmentSystem.Models.Doctor>
@{
    ViewData["Title"] = "👨‍⚕️ Manage Doctors";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', sans-serif;
    }

    .container {
        margin-top: 40px;
    }

    h2 {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 30px;
    }

    table {
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    th {
        background: #17a2b8;
        color: white;
    }

    td {
        vertical-align: middle;
    }

    .btn-danger {
        border-radius: 20px;
    }
</style>

<div class="container">
    <h2>👨‍⚕️ Manage Doctors</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">No doctors found in the system.</div>
    }
    else
    {
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Specialization</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doctor in Model)
                {
                    <tr>
                        <td>@doctor.Name</td>
                        <td>@doctor.Specialization</td>
                        <td>@doctor.Email</td>
                        <td>@doctor.Phone</td>
                        <td>
                            <form asp-action="DeleteDoctor" asp-controller="Admin" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@doctor.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">❌ Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
