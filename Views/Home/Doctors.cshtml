@model IEnumerable<DoctorAppointmentSystem.Models.Doctor>
@{
    ViewData["Title"] = "Our Doctors";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(to right, #a8e063, #56ab2f);
        font-family: 'Poppins', sans-serif;
        min-height: 100vh;
        padding: 40px 0;
    }

    .doctor-card {
        background-color: #fff;
        border-radius: 20px;
        padding: 25px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        transition: all 0.3s ease;
    }

        .doctor-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.25);
        }

    .doctor-name {
        color: #2f6f2f;
        font-weight: 700;
    }

    .specialization {
        color: #555;
        font-style: italic;
    }

    .availability {
        font-size: 0.95rem;
        color: #333;
    }

    .btn-book {
        background-color: #28a745;
        border: none;
        color: white;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-book:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .page-title {
        text-align: center;
        color: #2f6f2f;
        font-weight: 700;
        margin-bottom: 40px;
    }
</style>

<div class="container">
    <h1 class="page-title">👩‍⚕️ Our Expert Doctors</h1>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var doctor in Model)
            {
                <div class="col-md-4">
                    <div class="doctor-card text-center">
                        <h4 class="doctor-name">@doctor.Name</h4>
                        <p class="specialization">@doctor.Specialization</p>
                        <p class="availability">🕒 Available: @doctor.Availability</p>

                        <a asp-controller="Appointment"
                           asp-action="BookAppointment"
                           asp-route-doctorId="@doctor.Id"
                           class="btn btn-book mt-3 w-100">
                            📅 Book Appointment
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-5">
            No doctors available at the moment.
        </div>
    }
</div>
