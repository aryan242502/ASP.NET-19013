@model IEnumerable<DoctorAppointmentSystem.Models.Doctor>
@{
    ViewData["Title"] = "Doctor Appointment System";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #0A1F33, #112C44);
        font-family: 'Poppins', sans-serif;
        min-height: 100vh;
        padding: 50px 0;
        color: #FFFFFF;
    }

    /* Hero Section */
    .hero-section {
        text-align: center;
        color: #FFFFFF;
        margin-bottom: 50px;
    }

        .hero-section h1 {
            font-size: 2.8rem;
            font-weight: 700;
            color: #00b894; /* Green Header */
            text-shadow: 0 3px 10px rgba(0, 255, 128, 0.25);
        }

        .hero-section p {
            font-size: 1.2rem;
            color: #B0B8C1; /* Gray Subtitle */
        }

    /* Doctor Card */
    .doctor-card {
        background-color: #1B314C;
        border-radius: 20px;
        padding: 25px;
        box-shadow: 0 6px 20px rgba(17, 44, 68, 0.6);
        transition: all 0.3s ease;
        text-align: center;
        color: #FFFFFF;
    }

        .doctor-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 25px rgba(0, 255, 128, 0.25);
        }

    .doctor-name {
        color: #00b894; /* Green */
        font-weight: 700;
        margin-bottom: 8px;
        font-size: 1.3rem;
    }

    .specialization {
        color: #B0B8C1;
        font-style: italic;
        margin-bottom: 6px;
    }

    .availability {
        font-size: 0.95rem;
        color: #E0E0E0;
        margin-bottom: 15px;
    }

    /* Button */
    .btn-book {
        background-color: #00b894;
        border: none;
        color: #FFFFFF;
        font-weight: 600;
        border-radius: 12px;
        padding: 10px 18px;
        width: 100%;
        transition: all 0.3s;
    }

        .btn-book:hover {
            background-color: #00d47b;
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(0, 255, 128, 0.4);
        }

    /* Footer */
    .footer-text {
        text-align: center;
        color: #B0B8C1;
        margin-top: 50px;
        opacity: 0.8;
        font-size: 0.9rem;
    }
</style>

<div class="container">
    <div class="hero-section">
        <h1>💚 Welcome to Doctor Appointment System</h1>
        <p>Select a doctor and book your appointment easily.</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var doctor in Model)
            {
                <div class="col-md-4">
                    <div class="doctor-card">
                        <h4 class="doctor-name">@doctor.Name</h4>
                        <p class="specialization">@doctor.Specialization</p>
                        <p class="availability">🕒 Available: @doctor.Availability</p>

                        <a asp-controller="Appointment"
                           asp-action="BookAppointment"
                           asp-route-doctorId="@doctor.Id"
                           class="btn btn-book">
                            📅 Book Appointment
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-5 shadow-sm" style="background:#1B314C; color:#B0B8C1; border:none;">
            No doctors available at the moment.
        </div>
    }

    <div class="footer-text">
        <p>© 2025 Doctor Appointment System | All Rights Reserved</p>
    </div>
</div>
