@model DoctorAppointmentSystem.Models.Appointment

@{
    ViewData["Title"] = "Book Appointment";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center mb-4">🩺 Book Appointment</h2>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success text-center">@ViewBag.Message</div>
        }

        <form asp-action="BookAppointment" method="post">

            <div class="mb-3">
                <label class="form-label fw-bold">Full Name</label>
                <input type="text" class="form-control" asp-for="PatientName" placeholder="Enter your name" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <input type="email" class="form-control" asp-for="PatientEmail" placeholder="Enter your email" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Select Date</label>
                <input type="date" class="form-control" asp-for="AppointmentDate" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Time Slot</label>
                <select class="form-select" asp-for="TimeSlot" required>
                    <option value="">-- Select a Time Slot --</option>
                    <option value="10:00 AM - 11:00 AM">10:00 AM - 11:00 AM</option>
                    <option value="11:00 AM - 12:00 PM">11:00 AM - 12:00 PM</option>
                    <option value="2:00 PM - 3:00 PM">2:00 PM - 3:00 PM</option>
                    <option value="3:00 PM - 4:00 PM">3:00 PM - 4:00 PM</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Doctor ID</label>
                <input type="text" class="form-control" name="DoctorId" value="@ViewBag.DoctorId" readonly />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary px-4">Book Appointment</button>
                <a asp-action="Dashboard" class="btn btn-secondary px-4 ms-2">Back</a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background: #f8f9fa;
    }

    .card {
        max-width: 500px;
        margin: auto;
        border-radius: 15px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
