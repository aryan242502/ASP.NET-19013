@model IEnumerable<DoctorAppointmentSystem.Models.Doctor>

@{
    ViewData["Title"] = "Patient Dashboard";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <!-- 🔹 Heading -->
        <h2 class="text-center mb-4">Available Doctors</h2>

        <!-- 🔹 New Appointment Button -->
        <div class="text-end mb-3">
            <a href="/Appointment/BookAppointment" class="btn btn-success">➕ Book New Appointment</a>
        </div>

        <!-- 🔹 Doctors Table -->
        <table class="table table-bordered table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Specialization</th>
                    <th>Availability</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model)
                {
                    <tr>
                        <td>@d.Name</td>
                        <td>@d.Specialization</td>
                        <td>@d.Availability</td>
                        <td>
                            <a href="/Patient/Book?doctorId=@d.Id" class="btn btn-primary btn-sm">Book</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .card {
        border-radius: 15px;
        max-width: 900px;
        margin: auto;
    }

    .btn-success {
        border-radius: 8px;
        padding: 8px 15px;
    }

    .btn-primary {
        border-radius: 6px;
    }
</style>
