@model IEnumerable<DoctorAppointmentSystem.Models.Appointment>

@{
    ViewData["Title"] = "My Appointments";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center mb-4">📅 My Appointments</h2>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                You have not booked any appointments yet.
            </div>
        }
        else
        {
            <table class="table table-bordered table-hover text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Doctor ID</th>
                        <th>Patient Name</th>
                        <th>Date</th>
                        <th>Time Slot</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model)
                    {
                        <tr>
                            <td>@a.DoctorId</td>
                            <td>@a.PatientName</td>
                            <td>@a.AppointmentDate.ToString("dd MMM yyyy")</td>
                            <td>@a.TimeSlot</td>
                            <td>
                                @if (a.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">@a.Status</span>
                                }
                                else if (a.Status == "Cancelled")
                                {
                                    <span class="badge bg-danger">@a.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@a.Status</span>
                                }
                            </td>
                            <td>
                                @if (a.Status == "Pending")
                                {
                                    <a href="/Patient/Cancel?id=@a.Id" class="btn btn-outline-danger btn-sm">Cancel</a>
                                }
                                else
                                {
                                    <button class="btn btn-outline-secondary btn-sm" disabled>Not Available</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="text-center mt-3">
            <a href="/Patient/Dashboard" class="btn btn-secondary px-4">← Back to Dashboard</a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .card {
        border-radius: 15px;
        max-width: 1000px;
        margin: auto;
    }

    table {
        border-radius: 10px;
        overflow: hidden;
    }

    th {
        background-color: #185a9d !important;
    }

    .btn-outline-danger {
        border-radius: 8px;
    }

    .btn-secondary {
        border-radius: 8px;
    }
</style>
