@{
    ViewData["Title"] = "Patient Login";
}

<div class="login-container">
    <h2>Patient Login</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center" style="margin-bottom:15px;">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Login" method="post">
        <input type="email" name="email" placeholder="Email" required />
        <input type="password" name="password" placeholder="Password" required />
        <button type="submit">Login</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger text-center" style="margin-top:10px;">
            @Html.Raw(ViewBag.Message)
        </div>
    }

    <div style="text-align:center; margin-top:10px;">
        Don’t have an account? <a href="/User/Register">Register here</a>
    </div>
</div>
