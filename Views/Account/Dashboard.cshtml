@{
    ViewData["Title"] = "Dashboard";
    var userName = ViewBag.UserName ?? "User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Doctor Appointment System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #0d1b2a, #1b263b);
            color: #e0e0e0;
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
        }

        .navbar {
            background-color: #00b37d;
            color: white;
        }

        .navbar-brand {
            font-weight: bold;
            color: white;
        }

        .dashboard-header {
            text-align: center;
            margin-top: 40px;
        }

        .card {
            background: #112031;
            border: none;
            border-radius: 16px;
            color: #cfd8dc;
            transition: 0.3s;
        }

            .card:hover {
                background: #17354f;
                transform: translateY(-4px);
            }

            .card i {
                color: #00b37d;
                font-size: 35px;
                margin-bottom: 10px;
            }

        .stat-value {
            font-size: 1.8rem;
            font-weight: 600;
        }

        .btn-custom {
            background-color: #00b37d;
            color: white;
            border-radius: 8px;
            font-weight: 500;
        }

            .btn-custom:hover {
                background-color: #029e6f;
                color: white;
            }

        footer {
            text-align: center;
            margin-top: 50px;
            color: #a9b3c1;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <!-- 🔹 Navbar -->
    <nav class="navbar navbar-expand-lg px-4">
        <a class="navbar-brand" href="#">Doctor Appointment</a>
        <div class="ms-auto">
            <span class="me-3"><i class="fa fa-user-circle"></i> @userName</span>
            <a href="/Account/Logout" class="btn btn-sm btn-light">Logout</a>
        </div>
    </nav>

    <!-- 🔹 Dashboard -->
    <div class="container py-5">
        <div class="dashboard-header">
            <h2>Welcome, @userName 👋</h2>
            <p class="text-muted">Here’s your appointment overview</p>
        </div>

        <div class="row mt-5 g-4">
            <!-- Total Appointments -->
            <div class="col-md-4">
                <div class="card p-4 text-center shadow">
                    <i class="fa-solid fa-calendar-check"></i>
                    <div class="stat-value">12</div>
                    <p>Total Appointments</p>
                </div>
            </div>

            <!-- Upcoming -->
            <div class="col-md-4">
                <div class="card p-4 text-center shadow">
                    <i class="fa-solid fa-clock"></i>
                    <div class="stat-value">3</div>
                    <p>Upcoming Visits</p>
                </div>
            </div>

            <!-- Completed -->
            <div class="col-md-4">
                <div class="card p-4 text-center shadow">
                    <i class="fa-solid fa-heart-circle-check"></i>
                    <div class="stat-value">9</div>
                    <p>Completed Appointments</p>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <a href="/Appointment/BookAppointment" class="btn btn-custom px-4 py-2">
                <i class="fa fa-plus-circle"></i> Book New Appointment
            </a>
        </div>
    </div>

    <footer>
        <p>© 2025 Doctor Appointment System | Designed with 💚 and 💻</p>
    </footer>

</body>
</html>
