@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Appointment Successful</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            /* ✅ Hospital Theme Gradient */
            background: linear-gradient(135deg, #e3f2fd, #bbdefb, #90caf9);
            font-family: 'Segoe UI', sans-serif;
        }

        .success-card {
            width: 480px;
            background: rgba(255, 255, 255, 0.9);
            padding: 40px;
            border-radius: 18px;
            text-align: center;
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.5);
            backdrop-filter: blur(8px);
        }

        .success-icon {
            font-size: 70px;
            color: #2ecc71;
            margin-bottom: 15px;
        }

        h2 {
            font-weight: 700;
            color: #2e7d32;
        }

        p {
            font-size: 16px;
            margin-top: 10px;
            color: #333;
        }

        .btn-custom {
            padding: 10px 20px;
            border-radius: 30px;
            margin-top: 15px;
            font-weight: 600;
        }

        .btn-view {
            background: #1976d2;
            color: white;
        }

            .btn-view:hover {
                background: #2196f3;
            }

        .btn-back {
            background: #9e9e9e;
            color: white;
        }

            .btn-back:hover {
                background: #bdbdbd;
            }
    </style>
</head>

<body>

    <div class="success-card">

        <i class="fa-solid fa-circle-check success-icon"></i>

        <h2>Appointment Booked Successfully!</h2>

        <p>Your appointment has been submitted and is now waiting for doctor approval.</p>

        <a href="/Appointment/MyAppointments" class="btn btn-custom btn-view w-100 mt-3">
            View My Appointments
        </a>

        <a href="/Home/Index" class="btn btn-custom btn-back w-100 mt-2">
            Back to Home
        </a>

    </div>

</body>
</html>
