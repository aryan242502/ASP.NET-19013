@model DoctorAppointmentSystem.Models.Appointment
@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container mt-4">
    <h2>Appointment Details</h2>

    <dl class="row">
        <dt class="col-sm-3">Doctor</dt>
        <dd class="col-sm-9">@Model.DoctorName</dd>

        <dt class="col-sm-3">Patient</dt>
        <dd class="col-sm-9">@Model.PatientName (@Model.PatientEmail)</dd>

        <dt class="col-sm-3">Date & Time</dt>
        <dd class="col-sm-9">@Model.AppointmentDate.ToString("yyyy-MM-dd") - @Model.TimeSlot</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>
    </dl>

    <a asp-action="MyAppointments" class="btn btn-primary">Back to My Appointments</a>
</div>
