@model DoctorAppointmentSystem.Models.Appointment
@{
    ViewData["Title"] = "🩺 Book Appointment";
}

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        font-family: 'Segoe UI', sans-serif;
    }

    .container {
        max-width: 600px;
        margin: 60px auto;
        background: white;
        padding: 35px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #1565c0;
        margin-bottom: 25px;
        font-weight: 600;
    }

    label {
        font-weight: 500;
        color: #333;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px;
    }

    .btn-primary {
        background-color: #1565c0;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 500;
        width: 100%;
        transition: 0.3s;
    }

    .btn-primary:hover {
        background-color: #0d47a1;
        transform: scale(1.02);
    }

    .alert {
        border-radius: 10px;
        padding: 12px;
        margin-bottom: 20px;
        text-align: center;
        font-weight: 500;
        animation: fadeIn 0.5s ease-in;
    }

    .alert-success {
        background: #d4edda;
        color: #155724;
        border-left: 6px solid #28a745;
    }

    .alert-danger {
        background: #f8d7da;
        color: #721c24;
        border-left: 6px solid #dc3545;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="container">
    <h2>🩺 Book Appointment</h2>

    @* ✅ Alert Messages *@
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="BookAppointment" method="post">
        <input type="hidden" asp-for="DoctorId" />
        <input type="hidden" asp-for="DoctorName" />

        <div class="mb-3">
            <label>👨‍⚕️ Doctor Name</label>
            <input asp-for="DoctorName" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label>👤 Your Name</label>
            <input asp-for="PatientName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label>📧 Your Email</label>
            <input asp-for="PatientEmail" type="email" class="form-control" required />
        </div>

        <div class="mb-3">
            <label>📅 Appointment Date</label>
            <input asp-for="AppointmentDate" type="date" class="form-control" required />
        </div>

        <div class="mb-3">
            <label>⏰ Time Slot</label>
            <select asp-for="TimeSlot" class="form-control" required>
                <option value="">-- Select Time Slot --</option>
                <option>9:00 AM - 10:00 AM</option>
                <option>10:00 AM - 11:00 AM</option>
                <option>11:00 AM - 12:00 PM</option>
                <option>2:00 PM - 3:00 PM</option>
                <option>3:00 PM - 4:00 PM</option>
                <option>4:00 PM - 5:00 PM</option>
            </select>
        </div>

        <div class="mb-3">
            <label>📝 Description (Optional)</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Write your problem briefly..."></textarea>
        </div>

        <button type="submit" class="btn btn-primary">💾 Book Appointment</button>
    </form>

    <div class="text-center mt-3">
        <a href="@Url.Action("Index", "Home")" class="btn btn-link text-decoration-none">⬅ Back to Home</a>
    </div>
</div>
